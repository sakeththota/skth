---
const { url, title, description, publishedAt, tags, draft} = Astro.props
---

<a href={url} class="fd-post">
  <div class="min-w-0">
    <span class="fd-post-title">{title}</span>
    <p class="fd-post-desc hidden md:block">{description}</p>
    <div class="flex gap-2 mt-2">
      {tags.map((tag: string) => <span class="fd-tag">{tag}</span>)}
    </div>
  </div>
  <div class="flex flex-col items-end gap-0.5 flex-shrink-0 pt-1">
    {draft ? (
      <span class="fd-post-date">Coming Soon</span>
    ) : (
      <>
        <span class="fd-post-date">
          {new Date(publishedAt).toLocaleDateString('en-us', { month: 'short', day: 'numeric' })}
        </span>
        <span class="fd-post-date" style="opacity: 0.5;">
          {new Date(publishedAt).getFullYear()}
        </span>
      </>
    )}
  </div>
</a>
