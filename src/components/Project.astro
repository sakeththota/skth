---
import { Image } from 'astro:assets';
const { src, title, description, source, live, tags} = Astro.props
---
<div class="fd-project-stripe overflow-hidden">
  <Image {src} alt="" class="w-full aspect-video object-cover" width="1400" height="1024"/>
  <div class="p-4 lg:p-5 flex flex-col">
    <h4 class="fd-project-title" style="margin-bottom: 0.25rem;">{title}</h4>
    <p class="fd-body-text mb-3">{description}</p>
    <div class="flex flex-wrap gap-2 mb-4">
      {tags.map((tag: string) => <span class="fd-tag">{tag}</span>)}
    </div>
    <div class="flex items-center gap-4">
      <a href={source} class="fd-social-link" target="_blank" rel="noopener noreferrer">Source ↗</a>
      <a href={live} class="fd-social-link" target="_blank" rel="noopener noreferrer">Live ↗</a>
    </div>
  </div>
</div>
