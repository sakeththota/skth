---
import BaseLayout from "@/layouts/BaseLayout.astro"
import { Badge } from "@/components/ui/badge";
const { frontmatter } = Astro.props
const { title, publishedAt, tags} = frontmatter
---
<BaseLayout pageTitle={frontmatter.title}>
  <header class="text-primary prose dark:prose-invert mb-8 pb-8 border-b max-w-none">
    <h1 class="mb-4 text-2xl lg:text-3xl font-bold">{title}</h1>
    <small class="text-base lg:text-lg text-muted-foreground">by Saketh Thota Â· {(new Date(publishedAt)).toLocaleDateString('en-us')}</small>
  </header>
  <div class="prose prose-h2:text-xl prose-h2:lg:text-2xl prose-h2:font-bold prose-p:text-base prose-p:lg:text-lg prose-p:leading-7 prose-p:lg:leading-8 prose-li:text-base prose-li:lg:text-lg dark:prose-invert max-w-none">
    <slot />
  </div>
  <div class="flex gap-2 mt-8">
    {tags.map((tag: string) => <Badge className="text-sm" variant="outline">{tag}</Badge>)}
  </div>
</BaseLayout>
